From fd78824ce21d616e394887a53717ad2a4bfbbfb4 Mon Sep 17 00:00:00 2001
From: Koen Kooi <koen@dominion.thruhere.net>
Date: Tue, 21 Aug 2012 14:23:14 +0200
Subject: [PATCH 2/2] beaglebone: add mcspi1 and mcspi2

Signed-off-by: Koen Kooi <koen@dominion.thruhere.net>
---
 arch/arm/boot/dts/am335x-bone.dts |   23 +++++++++++++++++++++++
 1 files changed, 23 insertions(+), 0 deletions(-)

diff --git a/arch/arm/boot/dts/am335x-bone.dts b/arch/arm/boot/dts/am335x-bone.dts
index 4f897df..99b8c9e 100644
--- a/arch/arm/boot/dts/am335x-bone.dts
+++ b/arch/arm/boot/dts/am335x-bone.dts
@@ -30,6 +30,29 @@
 			tps: tps@24 {
 				reg = <0x24>;
 			};
+
+		};
+
+		mcspi1: spi@48030000 {
+			compatible = "ti,omap2-mcspi";
+			#address-cells = <1>;
+			#size-cells = <0>;   
+			ti,hwmods = "spi0";
+			ti,spi-num-cs = <4>;
+		};
+
+		mcspi2: spi@481A0000 {
+			compatible = "ti,omap2-mcspi";
+			#address-cells = <1>;
+			#size-cells = <0>;   
+			ti,hwmods = "spi1";
+			ti,spi-num-cs = <2>;
+                
+			spidev@2 {
+                        	compatible = "spidev";
+                        	spi-max-frequency = <1200000>;
+                        	reg = <0>;
+                	};
 		};
 	};	
 
