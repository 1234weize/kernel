From 7cc1b54bd65b029f9a4cef61d81475d4496b06dc Mon Sep 17 00:00:00 2001
From: Koen Kooi <koen@dominion.thruhere.net>
Date: Wed, 5 Sep 2012 09:49:21 +0200
Subject: [PATCH] beaglebone DT: set default triggers for LEDS

Signed-off-by: Koen Kooi <koen@dominion.thruhere.net>
---
 arch/arm/boot/dts/am335x-bone.dts |    2 ++
 1 files changed, 2 insertions(+), 0 deletions(-)

diff --git a/arch/arm/boot/dts/am335x-bone.dts b/arch/arm/boot/dts/am335x-bone.dts
index 26c1626e..5d90d38 100644
--- a/arch/arm/boot/dts/am335x-bone.dts
+++ b/arch/arm/boot/dts/am335x-bone.dts
@@ -42,12 +42,14 @@
 			led0 {
 				label = "status:green:user0";
 				gpios = <&gpio2 21 0>;
+				linux,default-trigger = "heartbeat";
 				default-state = "off";
 			};
 
 			led1 {
 				label = "status:green:user1";
 				gpios = <&gpio2 22 0>;
+				linux,default-trigger = "mmc0";
 				default-state = "off";
 			};
 
