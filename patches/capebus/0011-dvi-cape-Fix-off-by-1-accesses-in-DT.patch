From: Pantelis Antoniou <panto@antoniou-consulting.com>
Date: Tue, 16 Oct 2012 17:11:22 +0300
Subject: [PATCH 11/12] dvi-cape: Fix off by 1 accesses in DT

---
 arch/arm/boot/dts/am335x-bone.dts |    8 ++++----
 1 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/arch/arm/boot/dts/am335x-bone.dts b/arch/arm/boot/dts/am335x-bone.dts
index 77f138b..809516b 100644
--- a/arch/arm/boot/dts/am335x-bone.dts
+++ b/arch/arm/boot/dts/am335x-bone.dts
@@ -348,7 +348,7 @@
 			compatible = "da8xx-dt";
 			pinctrl-names = "default";
 			pinctrl-0 = <&bone_dvi_cape_dvi_00A0_pins>;
-			powerdn-gpio = <&gpio1 7 0>;
+			powerdn-gpio = <&gpio2 7 0>;
 			ti,hwmods = "lcdc";
 		};
 	};
@@ -359,7 +359,7 @@
 			compatible = "da8xx-dt";
 			pinctrl-names = "default";
 			pinctrl-0 = <&bone_dvi_cape_dvi_00A1_pins>;
-			powerdn-gpio = <&gpio1 31 0>;
+			powerdn-gpio = <&gpio2 31 0>;
 			ti,hwmods = "lcdc";
 		};
 	};
@@ -371,14 +371,14 @@
 
 		dvi-led0 {
 			label = "dvi:green:usr0";
-			gpios = <&gpio1 18 0>;
+			gpios = <&gpio2 18 0>;
 			linux,default-trigger = "heartbeat";
 			default-state = "off";
 		};
 
 		dvi-led1 {
 			label = "dvi:green:usr1";
-			gpios = <&gpio1 19 0>;
+			gpios = <&gpio2 19 0>;
 			linux,default-trigger = "mmc0";
 			default-state = "off";
 		};
